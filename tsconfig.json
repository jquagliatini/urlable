{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "strict": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types"
  },
  "exclude": ["**/*.spec.ts"]
}
